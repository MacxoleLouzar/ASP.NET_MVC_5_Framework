                <div class="col-sm-6">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="FirstName" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="LastName" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Gender"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Gender" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="IdNumber"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="IdNumber" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Ethnicity"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Ethnicity" disabled class="form-control" />

                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Position"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Position" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="AlternativeContact"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="AlternativeContact" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <a asp-action="EmployeeList" class="btn btn-secondary">Back To List</a>
                </div>
                <div class="col-sm-6">

                </div>
            </div>
            <br />
            <br />
        </div>

        <!--======================================================
                        Step Two
    =======================================================-->
        <div class="col-sm-6">
            <h3><strong>Address Details</strong></h3>
            <hr />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Address" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="StreetName"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="StreetName" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
