@model Company_devices.Models.Employee
@{
    ViewData["Title"] = "viewEmployee";
}

<h1>Employee Details</h1>
<hr />
<p>
    <a asp-action="DeviceList" asp-route-id="@Model.Empid" class="btn btn-sm btn-warning">View Devices</a>
</p>
<br />
<div class="row form-border">
    <!--
    ======================================================
                            Step One
    ======================================================
    -->
    <div class="row col-sm-12"> 
        <div class="col-sm-6">
            <h3><strong>Personal Details </strong></h3>
            <hr />
